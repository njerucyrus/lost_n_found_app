<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostItemActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="sans-serif-condensed"
                    android:layout_margin="10dp"
                    android:text="What have you lost ? "
                    android:textSize="18sp"
                    android:textColor="@color/colorTextPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_choose_image"
                    android:layout_margin="10dp"
                    android:text="Choose image (Optional)"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="18sp"
                    android:textColor="@color/colorLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:background="@drawable/edit_text_layout_bg_black"
                android:layout_margin="10dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txt_item_name"
                    android:hint="Name or type of item you lost"
                    android:padding="5dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_margin="10dp"
                android:text="Describe the lost item"
                android:textColor="@color/colorTextPrimary"
                android:fontFamily="sans-serif-condensed"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.design.widget.TextInputLayout
                android:background="@drawable/edit_text_layout_bg_black"
                android:layout_margin="10dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txt_item_desc"
                    android:hint="Description of lost item"
                    android:padding="5dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-condensed"
                android:textSize="18sp"
                android:textColor="@color/colorTextPrimary"
                android:text="Where do you think you lost it?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_pick_location"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-condensed"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorLink"
                android:text="Pick a location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-condensed"
                android:textSize="18sp"
                android:textColor="@color/colorTextPrimary"
                android:text="Describe additional location details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.design.widget.TextInputLayout
                android:background="@drawable/edit_text_layout_bg_black"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txt_location_desc"
                    android:hint="Location details(eg room number, floor..)"
                    android:padding="5dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btn_submit_lost_item"
                android:background="@drawable/button_ui_rounded_primary"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:text="@string/submit"
                android:fontFamily="sans-serif-condensed"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>