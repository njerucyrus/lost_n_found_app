<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Item Name"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/colorTextSecondary" />

            <ImageView
                android:id="@+id/lost_image_icon"
                android:layout_margin="1dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/txt_title"
                android:layout_marginBottom="2dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/no_image_lost_itme" />


            <View
                android:id="@+id/view_vert"
                android:layout_width="2dp"
                android:layout_height="120dp"
                android:layout_below="@+id/txt_title"
                android:layout_marginStart="1dp"
                android:layout_toEndOf="@+id/lost_image_icon"
                android:background="@android:color/transparent" />

            <TextView
                android:id="@+id/tv_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_title"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/view_vert"
                android:fontFamily="sans-serif-condensed"
                android:text="Item details"
                android:textAppearance="?android:textAppearanceSmall" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_item_description"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@+id/view_vert"
                android:fontFamily="sans-serif-condensed"
                android:text="Location"
                android:textAppearance="?android:textAppearanceSmall" />

            <TextView
                android:id="@+id/tv_more_location_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_location"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@+id/view_vert"
                android:fontFamily="sans-serif-condensed"
                android:text="More location details"
                android:textAppearance="?android:textAppearanceSmall" />

            <View
                android:id="@+id/view_horiz"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_more_location_details"
                android:layout_marginStart="1dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/lost_image_icon"
                android:background="@color/colorDivider" />

            <TextView
                android:id="@+id/tv_date_lost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_horiz"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/lost_image_icon"
                android:fontFamily="sans-serif-condensed"
                android:text="Date Lost " />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>